<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget" xmlns:button="urn:import:com.extjs.gxt.ui.client.widget.button">

	<gxt:LayoutContainer>
		<gxt:layoutdata type="FlowData" margins="10">
			<gxt:ContentPanel heading="HorizontalBox Example" width="600" height="500" layout="BorderLayout">
				<gxt:west size="150" minSize="100" maxSize="250" margins="5" split="true">
					<gxt:ContentPanel headerVisible="false" ui:field="buttonBox">
						<gxt:layout type="VBoxLayout" padding="5" vBoxLayoutAlign="STRETCH" />
						
						<gxt:layoutdata type="VBoxLayoutData" margins="5,5,5,5">
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Spaced" ui:field="spaced" toggle="true" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Multi-Spaced" ui:field="multiSpaced" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Align: top" ui:field="alignTop" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Align: middle" ui:field="alignMiddle" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Align: bottom" ui:field="alignBottom" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Align: stretch" ui:field="alignStretch" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Align: stretchmax" ui:field="alignStretchmax" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Flex: All even" ui:field="flexAllEven" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Flex: ratio" ui:field="flexRatio" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Flex + Stretch" ui:field="flexStretch" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Pack: start" ui:field="packStart" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Pack: center" ui:field="packCenter" />
						  <button:ToggleButton toggleGroup="hboxlayoutbuttons" allowDepress="false" text="Pack: end" ui:field="packEnd" />
						</gxt:layoutdata>
					</gxt:ContentPanel>
				</gxt:west>
				<gxt:center margins="5">
					<gxt:ContentPanel headerVisible="false" layout="CardLayout" ui:field="panel">
					
						<!--
							All sections expanded to show UiBinder, rather than doing it
							programmatically as shown in the Ext GWT Showcase
						 -->
					
						<!-- Spaced -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="TOP" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<gxt:Text />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 2" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						<!-- Multi-Spaced -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="TOP" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<gxt:Text />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 2" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<gxt:Text />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<gxt:Text />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						
						<!-- Align: top -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="TOP" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						<!-- Align: middle -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="MIDDLE" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						<!-- Align: bottom -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="BOTTOM" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						<!-- Align: stretch -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="STRETCH" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
												
						<!-- Align: stretchmax -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="STRETCHMAX" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						<!-- Flex: All even -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="MIDDLE" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0" flex="1">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
						<!-- Flex: ratio -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="MIDDLE" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0" flex="3">
								<button:Button text="Button 4" />
							</gxt:layoutdata>						
						</gxt:LayoutContainer>
						
						<!-- Flex + Stretch -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="STRETCH" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0" flex="1">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0" flex="3">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>

						<!-- Pack: start -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="MIDDLE" pack="START" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>

						<!-- Pack: center -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="MIDDLE" pack="CENTER" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>

						<!-- Pack: end -->
						<gxt:LayoutContainer>
							<gxt:layout type="HBoxLayout" padding="5" hBoxLayoutAlign="MIDDLE" pack="END" />
							
							<gxt:layoutdata type="HBoxLayoutData" margins="0,5,0,0">
								<button:Button text="Button 1" />
								<button:Button text="Button 2" />
								<button:Button text="Button 3" />
							</gxt:layoutdata>
							<gxt:layoutdata type="HBoxLayoutData" margins="0">
								<button:Button text="Button 4" />
							</gxt:layoutdata>
						</gxt:LayoutContainer>
						
					</gxt:ContentPanel>
				</gxt:center>
			</gxt:ContentPanel>
		</gxt:layoutdata>
	</gxt:LayoutContainer>
	
</ui:UiBinder>