<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget" xmlns:button="urn:import:com.extjs.gxt.ui.client.widget.button">

	<gxt:LayoutContainer styleAttribute="margin:10px">
		<gxt:ContentPanel layout="CardLayout" width="400" height="100" frame="true" heading="CardLayout Example" buttonAlign="CENTER" ui:field="panel">
			<gxt:LayoutContainer>
				<gxt:Label text="This is the contents for card: 1" />
			</gxt:LayoutContainer>
			<gxt:LayoutContainer>
				<gxt:Label text="This is the contents for card: 2" />
			</gxt:LayoutContainer>
			<gxt:LayoutContainer>
				<gxt:Label text="This is the contents for card: 3" />
			</gxt:LayoutContainer>
			<gxt:LayoutContainer>
				<gxt:Label text="This is the contents for card: 4" />
			</gxt:LayoutContainer>
		
			<gxt:buttons>
				<button:Button text="Card 1" ui:field="card1Button" />
				<button:Button text="Card 2" ui:field="card2Button" />
				<button:Button text="Card 3" ui:field="card3Button" />
				<button:Button text="Card 4" ui:field="card4Button" />
			</gxt:buttons>
			
		</gxt:ContentPanel>
	</gxt:LayoutContainer>
	
</ui:UiBinder>