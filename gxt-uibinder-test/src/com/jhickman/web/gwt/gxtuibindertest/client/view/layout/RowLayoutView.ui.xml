<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget">

	<gxt:LayoutContainer>
	 	<gxt:layoutdata type="FlowData" margins="10">
			<gxt:ContentPanel width="400" height="300" frame="true" collapsible="true" heading="RowLayout: Orientation set to vertical">
			
				<gxt:layout type="RowLayout" />
			
				<gxt:layoutdata type="RowData" width="1" height="-1" margins="4">
					<gxt:Text text="Test Label 1" styleName="pad-text" styleAttribute="backgroundColor:white" borders="true" />
				</gxt:layoutdata>
			
				<gxt:layoutdata type="RowData" width="1" height="1" margins="0,4,0,4">
					<gxt:Text text="Test Label 2" styleName="pad-text" styleAttribute="backgroundColor:white" borders="true" />
				</gxt:layoutdata>
			
				<gxt:layoutdata type="RowData" width="1" height="-1" margins="4">
					<gxt:Text text="Test Label 3" styleName="pad-text" styleAttribute="backgroundColor:white" borders="true" />
				</gxt:layoutdata>
			</gxt:ContentPanel>
		</gxt:layoutdata>
		
		<gxt:layoutdata type="FlowData" margins="10">
			<gxt:ContentPanel width="400" height="300" frame="true" collapsible="true" heading="RowLayout: Orientation set to horizontal">
			
				<gxt:layout type="RowLayout" orientation="HORIZONTAL" />
			
				<gxt:layoutdata type="RowData" width="-1" height="1" margins="4">
					<gxt:Text text="Test Label 1" styleName="pad-text" styleAttribute="backgroundColor:white" borders="true" />
				</gxt:layoutdata>

				<gxt:layoutdata type="RowData" width="1" height="1" margins="4,0,4,0">
					<gxt:Text text="Test Label 2" styleName="pad-text" styleAttribute="backgroundColor:white" borders="true" />
				</gxt:layoutdata>
			
				<gxt:layoutdata type="RowData" width="-1" height="1" margins="4">
					<gxt:Text text="Test Label 3" styleName="pad-text" styleAttribute="backgroundColor:white" borders="true" />
				</gxt:layoutdata>
			</gxt:ContentPanel>
		</gxt:layoutdata>
	</gxt:LayoutContainer>
	
</ui:UiBinder>